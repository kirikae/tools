#!/bin/bash

if [ "$EUID" -ne 0 ]; then
  echo "This script requires root privs."
  exit 1
fi

PARAMS=()

while [[ $# -gt 0 ]]; do
  key="$1"
  case $key in
    -n|--name )
      #TODO#
      # Add in a chec to ensure no duplicate VMs are created
      if [[ -n $"2" ]]; then
        VM_NAME="$2"
      else
        printf "{%s} VM name not defined. Please name your VM so it can be identified!\n"
      fi
      shift
      shift
      ;;
    -r|--memory )
      MEMORY="$2"
      shift
      shift
      ;;
    -c|--cpus )
      VCPUS=$"2"
      shift
      shift
      ;;
    --os )
      OS="$2"
      shift
      shift
      ;;
    --domain )
      DOMAIN="$2"
      shift
      shift
      ;;
    --ip )
      IP_ADDR="$2"
      shift
      shift
      ;;
    -od|--os-disk-size )
      OS_DISK="$2"
      shift
      shift
      ;;
    -*--* )
      printf "ERROR: Unsupported argument / flag $1"
      exit 1
      ;;
    *)
      PARAMS+=("$1")
      shift
      ;;
  esac
done
set -- "${PARAMS[@]}"

if [[ "${OS}" -eq "rhel8" ]]; then
  OS_VARIANT="rhel8-unknown"
  ISO="/var/lib/libvirt/images/rhel/8/rhel8.iso"
  KICKSTART="/home/ben/Repositories/kickstarts/ks-el8.cfg"
elif [[ "${OS}" -eq "cs8" ]]; then
  OS_VARIANT="centos-stream8"
  ISO="/var/lib/libvirt/images/centos/stream8/"
  KICKSTART="/home/ben/Repositories/kickstarts/ks-el8.cfg"
elif [[ "${OS}" -eq "rhel7" ]]; then
  OS_VARIANT="rhel8-unknown"
  ISO="/var/lib/libvirt/images/rhel/7/rhel7.iso"
  KICKSTART="/home/ben/Repositories/kickstarts/ks-el7.cfg"
elif [[ "${OS}" -eq "centos7" ]]; then
  OS_VARIANT="centos7"
  ISO="/var/lib/libvirt/images/centos/7/"
  KICKSTART="/home/ben/Repositories/kickstarts/ks-el7.cfg"
else
  OS_VARIANT="detect=on,name=generic"
fi

if [[ -n "${DOMAIN}" ]]; then
  DOMAIN="example.com"
fi


  #--location /var/lib/libvirt/images/rhel/rhel-server-7.7-x86_64-dvd.iso \
  #--location /var/lib/libvirt/images/CentOS-7-x86_64-Everything-1810.iso \
  #--location /var/lib/libvirt/images/rhel/7/rhel-server-7.9-x86_64-dvd.iso \
  #--extra-args="ks=file:/el7-cdrom.ks.cfg console=tty0 console=ttyS0,115200n8 \

virt-install \
  --name ${VM_NAME} \
  --memory ${MEMORY:-2048} \
  --vcpus ${VCPUS:-2} \
  --os-variant ${OS_VARIANT} -v \
  --disk path=/var/lib/libvirt/images/${VM_NAME}-OS.qcow2,size=${OS_DISK:-30} \
  --location ${ISO} \
  --nographics --accelerate \
  --noautoconsole \
  --initrd-inject ${KICKSTART} \
  --extra-args="ks=file:/$(basename ${KICKSTART}) console=tty0 console=ttyS0,115200n8 \
  ip=${VM_IPADDR} \
  netmask=255.255.255.0 \
  gateway=192.168.144.1 \
  nameserver=192.168.144.1" \
  --check disk_size=off
